   <children>
      <Label layoutX="28.0" layoutY="26.0" text="Calculate Sum">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="28.0" layoutY="80.0" promptText="Fist number" />
      <TextField fx:id="txtNumber2" layoutX="28.0" layoutY="125.0" promptText="Second number" />
      <Button fx:id="btSum" layoutX="28.0" layoutY="177.0" mnemonicParsing="false" onAction="#onBtSumAction" text="SUM" />
      <Label layoutX="28.0" layoutY="243.0" text="Result = " />
      <Label fx:id="labelResult" layoutX="80.0" layoutY="243.0" />
   </children>
</AnchorPane>
